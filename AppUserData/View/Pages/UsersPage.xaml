    <Grid Background="ForestGreen" Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding FormAddUserLabel}" FontSize="28" Foreground="Black"
                   Height="40" Margin="10" Width="220"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding FirstNameLabel}" FontSize="20" Foreground="Blue"
                   Height="30" Margin="10 10 5 10" Width="220"/>
        <TextBox x:Name="FirstName" Grid.Column="0" Grid.Row="2" FontSize="20" Foreground="Black"
                 Height="30" Margin="5 10 10 10" Width="220" Text="{Binding FirstName}"/>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="{Binding SecoundNameLabel}" FontSize="20" Foreground="Blue"
                   Height="30" Margin="10 10 5 10" Width="220"/>
        <TextBox x:Name="SecoundName" Grid.Column="0" Grid.Row="4" FontSize="20"
                 Height="30" Margin="5 10 10 10" Width="220" Text="{Binding LastName}"/>
        <Button Grid.Column="0" Grid.Row="10" 
                FontSize="20" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="100" Height="40" Background="Red"
                Template="{StaticResource ButtonAddUserTemplate}" >
            <Button.Content>
                Add
            </Button.Content>
        </Button>
        <ContentControl Background="Azure" Grid.Column="2" Grid.RowSpan="6"
                        Height="300" Width="300" HorizontalAlignment="Center"/>
        <ListView ItemsSource="{Binding DataContext.Users}" 
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  Grid.Column="2" Grid.RowSpan="6"/>


    </Grid>
    
    
    
