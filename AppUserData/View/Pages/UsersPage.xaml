<Page
    x:Class="AppUserData.View.Pages.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppUserData.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodel="using:AppUserData.ViewModel" 
    d:DataContext="{d:DesignInstance Type=viewmodel:AppUserDataViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button" x:Key="ButtonAddUserTemplate" >
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderBrush="Blue" BorderThickness="1" CornerRadius="8"  >
                            <StackPanel Orientation="Horizontal" Background="LightBlue"  
                                    Height="40" Padding="5" Width="100">
                                <SymbolIcon Symbol="AddFriend" 
                                            VerticalAlignment="Center" 
                                            Margin="10 0 10 0"/>
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="20"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="ButtonEditDeleteUserTemplate" >
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderBrush="Red" BorderThickness="1" CornerRadius="8"  >
                            <StackPanel Orientation="Horizontal" Background="LightBlue"  
                                        Height="auto"  
                                        Padding="5" 
                                        Width="auto">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="20"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    
    <Grid Background="LightGreen" Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" 
                   Text="{Binding FormAddUserLabel}" 
                   FontSize="28" Foreground="Black"
                   Height="40" Margin="10" Width="220"/>
        <TextBlock Grid.Column="0" Grid.Row="1" 
                   Text="{Binding FirstNameLabel}" 
                   FontSize="20" Foreground="Blue"
                   Height="30" Margin="10 10 5 10" Width="220"/>
        <TextBox x:Name="FirstName" Grid.Column="0" Grid.Row="2" FontSize="16" 
                 Foreground="Black" Background="IndianRed"
                 Height="30" Margin="5 10 10 10" Width="220" 
                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="{Binding SecoundNameLabel}" FontSize="20" Foreground="Blue"
                   Height="30" Margin="10 10 5 10" Width="220"/>
        <TextBox x:Name="SecoundName" Grid.Column="0" Grid.Row="4" FontSize="16"
                 Height="30" Margin="5 10 10 10" Width="220" 
                 Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Column="0" Grid.Row="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command="{Binding AddUserCommand}"
                Style="{StaticResource ButtonAddUserTemplate}">
            Add
        </Button>
        <Button Grid.Column="0" Grid.Row="6" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Command="{Binding DeleteUserCommand}" 
                CommandParameter="{Binding ElementName=usersList, Path=SelectedItem}"
                Style="{StaticResource ButtonEditDeleteUserTemplate}"
                Margin="10 5">
            <Button.Content>
                <SymbolIcon Symbol="Delete" 
                            VerticalAlignment="Center" 
                            Margin="10 0 10 0"/>
            </Button.Content>
        </Button>
        <Button Grid.Column="0" Grid.Row="6" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command="{Binding EditUserCommand}" 
                CommandParameter="{Binding ElementName=usersList, Path=SelectedItem}"
                Style="{StaticResource ButtonEditDeleteUserTemplate}"
                Margin="10 5">
            <Button.Content>
                <SymbolIcon Symbol="Edit" 
                            VerticalAlignment="Center" 
                            Margin="10 0 10 0"/>
            </Button.Content>
        </Button>
        <Button Grid.Column="0" Grid.Row="6" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Command="{Binding CanEditUserCommand}" 
                CommandParameter="{Binding ElementName=usersList, Path=SelectedItem}"
                Style="{StaticResource ButtonEditDeleteUserTemplate}"
                Margin="10 5">
            <Button.Content>
                <SymbolIcon Symbol="Save" 
                            VerticalAlignment="Center" 
                            Margin="10 0 10 0"/>
            </Button.Content>
        </Button>


        <TextBlock Grid.Column="2" 
                   Grid.Row="0" 
                   Text="Users:" 
                   FontSize="28" 
                   Foreground="Black"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   Height="40" 
                   Margin="10" 
                   Width="220"/>

        <ListView ItemsSource="{Binding Users}" x:Name="usersList"
                  Background="BlueViolet"
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top"
                  Grid.Column="2" 
                  Grid.Row="1"
                  Grid.RowSpan="5"
                  Padding="5 10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Stretch">
                        <TextBox Text="{Binding FirstName}" 
                                   VerticalAlignment="Center" 
                                   Margin="0 5 10 5"
                                   Width="100"/>
                        <TextBlock Text="{Binding SecoundName}" 
                                   VerticalAlignment="Center" 
                                   Margin="0 5 10 5"
                                   Width="100"/>

                        <!--Button Command="{Binding ElementName=thisPage, 
                            Path=DataContext.EditUserCommand}" 
                                CommandParameter="{Binding}"
                                Style="{StaticResource ButtonEditDeleteUserTemplate}"
                                Margin="10 5">
                            <Button.Content>
                                <SymbolIcon Symbol="Edit" 
                                    VerticalAlignment="Center" 
                                    Margin="10 0 10 0"/>
                            </Button.Content>
                        </Button>

                        <Button Command="{Binding ElementName=thisPage, 
                            Path=DataContext.DeleteUserCommand}" 
                                CommandParameter="{Binding}"
                                Style="{StaticResource ButtonEditDeleteUserTemplate}"
                                Margin="10 5">
                            <Button.Content>
                                <SymbolIcon Symbol="Delete" 
                                    VerticalAlignment="Center" 
                                    Margin="10 0 10 0"/>
                            </Button.Content>
                        </Button-->
                    </StackPanel>
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

    </Grid>
    
    
</Page>
